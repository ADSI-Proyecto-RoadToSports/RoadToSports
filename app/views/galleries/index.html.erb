<div class="contenido ">
<div class="img1"></div>
<div class="img2"></div>
<ul class="nav nav-tabs" style="margin-bottom: 15px;">

</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in cont1" id="inicio">
<h1>Listing galleries</h1>
  <%= form_tag galleries_path, :method => 'get' do %> 

   <% content_tag :label do %> 

   Search term:
   <%= text_field_tag :search, params[:search] %> 

   <%= submit_tag "Buscar", :name => nil %> 

   <% end %> 

  <% end %>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= image_tag gallery.image.url(:thumb) %></td>
        <td><%= link_to 'Show', gallery %></td>
        <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
        <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gallery', new_gallery_path %><br>
<%= will_paginate @galleries, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Fotos: <%= @galleries.count %>
</div>
</div>
</div>