<%# navigation styled for Bootstrap 3.0 %>
<nav class="nave">
  <div class="container">
    <div class="collapse navbar-collapse">
      
      <ul class="nav navbar-nav menu">
        <li class="dropdown-header"></li>
        <%= render 'layouts/navigation_links' %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <% if current_user.admin == true  %>
            <li>
            <% if current_user.genero == true %>
              <%= link_to 'Administrador: '+ current_user.nombre, edit_user_path(current_user.id) %>
            <% else %>
              <%= link_to 'Administradora: '+ current_user.nombre, edit_user_path(current_user.id) %>
            <% end%>
            </li>
          <% else %>
            <li>
              <%= link_to 'Usuario: '+current_user.nombre, edit_user_path(current_user.id) %>
            </li>
          <% end %>
            <li>
              <%= link_to "Salir", :logout, method: :get %>
            </li>
         <% else %>
            <li>
              <%= link_to "Registrarse", new_user_path %>
            </li> 
            <li>
              <%= link_to "Entrar", new_user_session_path, remote: true %>
            </li>
        <% end %>
      </ul>

    </div>
  </div>

</nav>  <img class="logo" src="/assets/logo.png">