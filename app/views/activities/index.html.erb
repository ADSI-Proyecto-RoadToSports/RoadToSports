<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in cont1" id="inicio">
<h1>Listing activities</h1>
<%= form_tag galleries_path, :method => 'get' do %> 

   <% content_tag :label do %> 

   Search term:
   <%= text_field_tag :search, params[:search] %> 

   <%= submit_tag "Buscar", :name => nil %> 

   <% end %> 

  <% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.state %></td>
        <td><%= activity.description %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %><br>
<%= will_paginate @activities, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
