<div class="contenido ">
<div class="img1"></div>
<div class="img2"></div>
<ul class="nav nav-tabs" style="margin-bottom: 15px;">

</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in cont1" id="inicio">
   
    <h1>Categorias de preguntas</h1>

    <table  class="table table-striped table-hover " id="inicio">
      <thead>
        <tr>
          <th>Titulo</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td><%= link_to 'Ver', category %></td>
            <td><%= link_to 'Editar', edit_category_path(category) %></td>
            <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  <%= button_to 'Nueva Categoria', new_category_path, :method=>"get", class: "btn btn-info" %><br>

  </div>
  </div>
</div>

