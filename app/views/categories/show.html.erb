
<div class="contenido ">
<div class="img1"></div>
<div class="img2"></div>
<ul class="nav nav-tabs" style="margin-bottom: 15px;">

</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in cont1" id="inicio">
<%= button_to 'Volver a las categorias', categories_path, class: "btn btn-info", :method => "get" %>
<p> 
 <h1>Categoria: <%= @category.title %></h1> 
</p> 

<%= form_for @question do |f| %> 
	 
	<div class="panel panel-primary">
	  <div class="panel-heading">
	    <h3 class="panel-title">Preguntas <span class="label label-danger"><%= @category.questions.count.to_s %></span></h3>
	  </div>
		<div class="panel-body">
		<form class="form-horizontal">
		 <fieldset>
		<div class="form-group">
		  <label class="control-label">Pregunta Nueva</label>
		  <div class="input-group">
		    <%= f.hidden_field :category_id, :value => @category.id %> 
			<%= f.text_field :title, :placeholder => "Escriba pregunta", class: "form-control" %>
			<%= f.text_area :descripcion, :placeholder => "Descripcion", class: "form-control" %>
			<%= f.submit 'AÃ±adir pregunta', class: "btn btn-primary" %> 
		  </div>

		</div>
		<div class="form-group">
	      <div class="input-group">
	       
	      </div>
	   	</div>
	  
		 
		 </fieldset>
		 </form>
	  </div>
	</div>
	<% end %>
		<hr> 
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Preguntas hechas</h3>
	  </div>
	  <div class="panel-body">
		<% @category.questions.each do |question| %> 		 
			<div class="panel-group" id="accordion">
			  <div class="panel panel-default">
			    <div class="panel-heading">
			      <h4 class="panel-title">
			        <a data-toggle="collapse" data-parent="#accordion" href='#c-<%= question.id %>'>
			          <%= question.title %>
			          	<form class="navbar-right ">
							<p> <span class="label label-primary"><%= question.comments.count.to_s %></span></p>
					    </form>
			        </a>
			      </h4>
			    </div>
			    <div id='c-<%= question.id %>' class="panel-collapse collapse ">
			      <div class="panel-body">
			      	<p><%= question.descripcion %></p>
			       <h4>Comentarios:</h4> 
					<% question.comments.each do |comment| %> 
						<div class="panel panel-default">
						  <div class="panel-body">
						    <%= comment.content %><br>
						  </div>
						</div>
					<% end %> 

					<%= form_for(@comment) do |f| %> 

					 <%= f.hidden_field :question_id, :value => question.id %> 
					 <%= f.text_area :content %> 
					 <%= f.submit 'Comentar', class: "btn btn-info" %> 
			      </div>
			    </div>
			  </div>
			  
			</div>
		<% end %> 
		<% end %> 
	  </div>
	</div>
	


  </div>
  </div>
</div>
