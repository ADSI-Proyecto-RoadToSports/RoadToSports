<h1>Listing novelties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>New type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @novelties.each do |novelty| %>
      <tr>
        <td><%= novelty.name %></td>
        <td><%= novelty.description %></td>
        <td><%= novelty.new_type %></td>
        <td><%= link_to 'Show', novelty %></td>
        <td><%= link_to 'Edit', edit_novelty_path(novelty) %></td>
        <td><%= link_to 'Destroy', novelty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Novelty', new_novelty_path %>
