<%= form_for(@pre_registration) do |f| %>
  <% if @pre_registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pre_registration.errors.count, "error") %> prohibited this pre_registration from being saved:</h2>

      <ul>
      <% @pre_registration.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    <%= f.label :Nombre %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label>Modalidad de Juego</label><br>
<%= f.collection_select :modalities_type_id, ModalitiesType.all, :id, :name, class: "form-control", prompt:
"Seleccione Modalidad"%>
</div>
  <div class="field">
    <label>Deportes a Jugar</label><br>
    <%= f.collection_select :sport_id, Sport.all, :id, :name, class: "form-control", prompt: "Seleccione Deporte"%>
  </div>
  <div class="field">
    <%= f.label :Descripcion %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :Email %><br>
    <%= f.text_field :mail %>
  </div>
  <div class="field">
    <%= f.label :Torneos_a_Jugar %><br>
    <%= f.collection_select :tournament_id, Tournament.all, :id, :name, class: "form-control", prompt:
"Seleccione Torneo" %>
  </div>
  <div class="field">
    <%= f.label :Aceptacion %><br>
    <%= f.text_field :acceptance_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>