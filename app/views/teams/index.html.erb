<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in cont1" id="inicio">
<h1>Equipos</h1>
<%= form_tag teams_path, :method => 'get' do %>
<% content_tag :label do %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Buscar", :name => nil %>
<% end %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Modalidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.modalities %></td>
        <td><%= link_to 'Ver', team %></td>
        <td><%= link_to 'Editar', edit_team_path(team) %></td>
        <td><%= link_to 'Eliminar', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevio Equipo', new_team_path %><br>
<%= will_paginate @teams, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Equipos: <%= @teams.count %>
