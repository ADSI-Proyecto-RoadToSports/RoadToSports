<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in cont1" id="inicio">
<h1>Listing teams</h1>
<%= form_tag teams_path, :method => 'get' do %> 

   <% content_tag :label do %> 

   Search term:
   <%= text_field_tag :search, params[:search] %> 

   <%= submit_tag "Buscar", :name => nil %> 

   <% end %> 

  <% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Modalities</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.modalities %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %><br>
