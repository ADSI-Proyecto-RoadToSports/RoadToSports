<h1>Listing teams</h1>

<table class="table table-striped table-hover ">
  <thead>
      <th>Nombre</th>
      <th>Sport</th>
      <th>Numero de integrantes</th>
      <th>Estado</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= button_to team.nombre, team_integrantes_path(team), :method=>"get", class: "btn btn-default btn-sm"  %></td>
        <td><%= team.sport.name %></td>
        <td><span class="label label-primary"><%= team.integrantes.count.to_s %></span></td>
        <td><%= mostrar_activo(team.active) %></td>
        <td><%= link_to 'Show', sport_team_path(@sport,team) %></td>
        <td><%= link_to 'Edit', edit_sport_team_path(@sport,team) %></td>
        <td><%= link_to 'Destroy', sport_team_path(@sport,team), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

