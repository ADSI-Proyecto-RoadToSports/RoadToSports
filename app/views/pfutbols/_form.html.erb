    <div id="error_explanation">
      <h2><%= pluralize(@pfutbol.errors.count, "error") %> prohibited this pfutbol from being saved:</h2>

      <ul>
      <% @pfutbol.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :equipo1 %><br>
    <%= f.text_field :equipo1 %>
  </div>
  <div class="field">
    <label>Puntos</label><br>
    <%= f.number_field :puntos1 %>
  </div>
  <div class="field">
        <label>Puntos obtenidos</label><br>
    <%= f.number_field :puntoso1 %>
  </div>
  <div class="field">
    <%= f.label :equipo2 %><br>
    <%= f.text_field :equipo2 %>
  </div>
  <div class="field">
    <label>Puntos</label><br>
    <%= f.number_field :puntos2 %>
  </div>
  <div class="field">
        <label>Puntos obtenidos</label><br>
    <%= f.number_field :puntoso2 %>
  </div>
  <div class="field">
    <%= f.label :fecha %><br>
    <%= f.datetime_select :fecha %>
  </div>
  <div class="field">
    <%= f.label :estado %><br>
    <%= f.check_box :estado %>
  </div>
  <div class="field">
    <label>Administrador</label><br>
    <%= f.collection_select :user_id, User.where(Admin: true).all  , :id, :email, class: "form-control", prompt: "Seleccione Un Admin" %>
  </div>
  <div class="field">
     <label>Torneo</label><br>
    <%= f.collection_select :tournament_id, Tournament.all, :id, :name, class: "form-control", prompt: "Seleccione Un Torneo" %>
