<div class="pfutbol">
  <p id="notice">
    <%= notice %>
  </p>

  <p>
    <strong>Equipo1:</strong>
    <%= @pfutbol.equipo1 %>
  </p>

  <p>
    <strong>Puntos:</strong>
    <%= @pfutbol.puntos1 %>
    <%= if @pfutbol.puntos1 > @pfutbol.puntos2
          gano() 
        elsif @pfutbol.puntos1 == @pfutbol.puntos2
          empate() 
          else
            perdio()
        end %>
  </p>

  <p>
    <strong>Puntos Torneo:</strong>
    <%= @pfutbol.puntoso1 %>
  </p>

  <p>
    <strong>Equipo2:</strong>
    <%= @pfutbol.equipo2 %>
  </p>

  <p>
    <strong>Puntos:</strong>
    <%= @pfutbol.puntos2 %>
    <%= if @pfutbol.puntos2 > @pfutbol.puntos1
          gano() 
        elsif @pfutbol.puntos1 == @pfutbol.puntos2
          empate() 
          else
            perdio()
        end %>
  </p>
  <p>
    <strong>Puntos Torneo:</strong>
    <%= @pfutbol.puntoso2 %>
  </p>
  <p>
    <strong>Fecha:</strong>
    <%= @pfutbol.fecha %>
  </p>

  <p>
    <strong>Estado:</strong>
    <%= estado(@pfutbol.estado) %>
  </p>

  <p>
    <strong>Responsable:</strong>
    <%= @pfutbol.user.nombre %>
  </p>

  <p>
    <strong>Torneo:</strong>
    <%= @pfutbol.tournament_id %>
  </p>

</div>