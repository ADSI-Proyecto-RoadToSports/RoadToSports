<div class="contenido ">
<div class="img1"></div>
<div class="img2"></div>
<ul class="nav nav-tabs" style="margin-bottom: 15px;">

</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in cont1" id="inicio">
<h1>Torneos</h1>
<%= form_tag tournaments_path, :method => 'get' do %>
<% content_tag :label do %>
<%= text_field_tag :search, params[:search], :placeholder => "Buscar por nombre..." %>
<%= submit_tag "Buscar", :name => nil %>
<% end %>
<% end %>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Estado</th>
      <th>Equipos</th>
      <th>Nombre</th>
      <th>Tipo de Modalidad</th>
      <th>Deporte</th>
      <th>Fecha</th>
      <th>Tipo Torneo</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <%= render @tournaments %>
  </tbody>
</table>

<br>
<%= button_to 'Nuevo Torneo', new_tournament_path, remote: true, :method=>"get", class: "btn btn-info"  %><br>
<%= will_paginate @tournaments, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Torneos: <%= @tournaments.count %>
</div>
</div>
