<%= simple_form_for(@tournament, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>
  <% if @tournament.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

      <ul>
      <% @tournament.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label>Tipo De Modalidad</label><br>
    <%= f.collection_select :modalitiestype_id, ModalitiesType.all, :id, :name, class: "form-control", prompt: "Seleccione Un Tipo De Modalidad", :onchange => "alert('test');" %>
  </div>
  <div class="field">
     <label>Deporte</label><br>
    <%=f.collection_select :sport_id, Sport.all, :id, :name, class: "form-control", prompt: "Seleccione Un Deporte" %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.check_box :state %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <label>Tipo De Torneo</label><br>
    <%= f.collection_select :typetournament_id, TypeTournament.all, :id, :name, class: "form-control", prompt: "Seleccione Un Tipo De Torneo" %>
  </div>
  <div class="actions">
    <%= f.submit 'Crear torneo'%>
  </div>
<% end %>
