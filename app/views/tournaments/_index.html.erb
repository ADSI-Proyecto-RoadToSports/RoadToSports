<h1>Lista de Torneos</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Modalities</th>
      <th>State</th>
      <th>Date</th>
      <th>Type tournament</th>
      <th>Acceptance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.name %></td>
        <td><%= tournament.modalities %></td>
        <td><%= tournament.state %></td>
        <td><%= tournament.date %></td>
        <td><%= tournament.type_tournament %></td>
        <td><%= tournament.acceptance %></td>
        <td><%= link_to 'Show', tournament %></td>
      </tr>
    <% end %>
  </tbody>
</table>

