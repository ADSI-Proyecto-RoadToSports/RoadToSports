<div class="pmicrofutbol">
<p id="notice"><%= notice %></p>

<p>
  <strong>Primer Equipo:</strong>
  <%= @pmicrofutbol.equipo1 %>
</p>

<p>
  <strong>Goles Equipo1:</strong>
  <%= @pmicrofutbol.puntos1 %>
  <%= if @pmicrofutbol.puntos1 > @pmicrofutbol.puntos2
                gano() 
            elsif @pmicrofutbol.puntos1 == @pmicrofutbol.puntos2
                empate() 
                else
                    perdio()
  end %>
</p>

<p>
  <strong>Puntos Equipo1:</strong>
  <%= @pmicrofutbol.puntoso1 %>
</p>
<hr>
<p>
  <strong>Segundo Equipo:</strong>
  <%= @pmicrofutbol.equipo2 %>
</p>

<p>
  <strong>Goles Equipo2:</strong>
  <%= @pmicrofutbol.puntos2 %>
  <%= if @pmicrofutbol.puntos1 > @pmicrofutbol.puntos2
                gano() 
            elsif @pmicrofutbol.puntos2 == @pmicrofutbol.puntos1
                empate() 
                else
                    perdio()
  end %>
</p>

<p>
  <strong>Puntos Equipo2:</strong>
  <%= @pmicrofutbol.puntoso2 %>
</p>
<hr>
<p>
  <strong>Tournament:</strong>
  <%= @pmicrofutbol.tournament.name %>
</p>

<p>
  <strong>Fecha:</strong>
  <%= @pmicrofutbol.fecha %>
</p>

<p>
  <strong>Estado:</strong>
  <%= estado(@pmicrofutbol.estado) %>
</p>

<p>
  <strong>User:</strong>
  <%= @pmicrofutbol.user.nombre %>
</p>
</div>
