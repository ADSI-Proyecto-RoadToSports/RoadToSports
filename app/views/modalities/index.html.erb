<div class="contenido ">
<div class="img1"></div>
<div class="img2"></div>
<ul class="nav nav-tabs" style="margin-bottom: 15px;">

</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in cont1" id="inicio">
<h1>Modalidades</h1>
<%= form_tag modalities_path, :method => 'get' do %> 

   <% content_tag :label do %> 

   Search term:
   <%= text_field_tag :search, params[:search] %> 

   <%= submit_tag "Buscar", :name => nil %> 

   <% end %> 

  <% end %>
<table>
  <thead>
    <tr>
      <th>Tipo Modalidad</th>
      <th>Jugadores</th>
      <th>Actividad</th>
      <th>Torneo</th>
      <th>Deporte</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modalities.each do |modality| %>
      <tr>
        <td><%= modality.modalities_type %></td>
        <td><%= modality.name %></td>
        <td><%= modality.players %></td>
        <td><%= modality.activity %></td>
        <td><%= modality.tournament %></td>
        <td><%= modality.sport %></td>
        <td><%= link_to 'Ver', modality %></td>
        <td><%= link_to 'Editar', edit_modality_path(modality) %></td>
        <td><%= link_to 'Eliminar', modality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Modalidad', new_modality_path %><br>
<%= will_paginate @modalities, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Modalidades: <%= @modalities.count %>
